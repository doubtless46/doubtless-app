<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/cream"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    tools:ignore="HardcodedText">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#99B8B8B8" />

    <!--    99B8B8B8-->
    <!--    #99DDDDDD-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/iv_dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-2dp"
            android:fontFamily="@font/poppins"
            android:text="Siddharth Sharma"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/author_doubt_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:text="2 hours ago"
            android:textColor="@color/grey"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />

        <TextView
            android:id="@+id/user_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:text="| 1st year |"
            android:textColor="@color/grey"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintTop_toTopOf="@id/tv_username" />

        <TextView
            android:id="@+id/user_college"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:text="MSIT"
            android:textColor="@color/grey"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/user_year"
            app:layout_constraintTop_toTopOf="@id/tv_username" />

        <ImageView
            android:id="@+id/ic_fire"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:visibility="invisible"
            android:src="@drawable/ic_fire_24"
            app:layout_constraintStart_toEndOf="@id/user_college"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/purple" />

        <TextView
            android:id="@+id/user_doubt_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:text="Heading"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dp" />

        <TextView
            android:id="@+id/user_doubt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/user_doubt_heading" />


        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/iv_votes"
            app:layout_constraintTop_toBottomOf="@id/iv_votes"
            tools:text="Related to : attendance, marks, teachers" />

        <TextView
            android:id="@+id/iv_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Votes"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_doubt_description" />

        <TextView
            android:id="@+id/tv_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:text="211"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_votes"
            app:layout_constraintTop_toTopOf="@id/iv_votes" />


        <TextView
            android:id="@+id/iv_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Answers"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/tv_votes"
            app:layout_constraintTop_toTopOf="@id/iv_votes" />

        <TextView
            android:id="@+id/tv_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:text="23"
            android:textColor="@color/grey"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_answers"
            app:layout_constraintTop_toTopOf="@id/iv_answers" />

        <CheckBox
            android:id="@+id/iv_upvotes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/upvote_icon"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:button="@null"
            android:checked="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tags"
            android:stateListAnimator="@animator/scale_votes_icon" />

        <CheckBox
            android:id="@+id/iv_downvote"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="6dp"
            android:background="@drawable/upvote_icon"
            android:layout_marginStart="16dp"
            android:rotation="180"
            android:backgroundTint="@color/grey"
            android:button="@null"
            android:checked="false"
            android:stateListAnimator="@animator/scale_votes_icon"
            app:layout_constraintStart_toEndOf="@id/iv_upvotes"
            app:layout_constraintTop_toTopOf="@id/iv_upvotes" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>